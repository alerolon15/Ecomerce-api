{{> header}}
<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
<style media="screen">
  /* layout.css Style */
  .upload-drop-zone {
  height: 200px;
  border-width: 2px;
  margin-bottom: 20px;
  }

  /* skin.css Style*/
  .upload-drop-zone {
  color: #ccc;
  border-style: dashed;
  border-color: #ccc;
  line-height: 200px;
  text-align: center
  }
  .upload-drop-zone.drop {
  color: #222;
  border-color: #222;
  }
</style>
<div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Crear un producto</div>
      <div class="card-body">
        <form action="" enctype="multipart/form-data" autocomplete="off" method="POST">
          {{{error}}}
          {{#if errores}}
            {{#each errores}}
              <div class='alert alert-danger' role='alert'>{{this}}</div>
            {{/each}}
          {{/if}}
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="exampleInputName">CODIGO</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="codigo" placeholder="Codigo" >
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">NOMBRE</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="nombre" placeholder="Nombre" >
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <p>Precios de compra y venta</p>
                <hr>
              </div>
              <div class="col-md-6">
                <label for="exampleInputPassword1">Valor Compra</label>
                <input class="form-control" type="number" name="valorCompra" placeholder="Valor Compra">
                <label for="exampleInputPassword1">IVA Compra</label>
                <input class="form-control" type="number" name="ivaCompra" placeholder="IVA Compra">
                <label for="exampleInputPassword1">Total Compra</label>
                <input class="form-control" type="number" name="totalCompra" placeholder="Total Compra">
              </div>
              <div class="col-md-6">
                <label for="exampleInputPassword1">Valor Venta</label>
                <input class="form-control" type="number" name="valorVenta" placeholder="Valor Venta">
                <label for="exampleInputPassword1">IVA Venta</label>
                <input class="form-control" type="number" name="ivaVenta" placeholder="IVA Venta">
                <label for="exampleInputPassword1">Total Venta</label>
                <input class="form-control" type="number" name="totalVenta" placeholder="Total Venta">
              </div>
              <div class="col-md-12">
                <hr>
                <label for="exampleConfirmPassword">STOCK</label>
                <input class="form-control" type="number" name="stock" placeholder="stock">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleConfirmPassword">CATEGORIA</label>
                <input class="form-control" type="text" name="categoria" placeholder="Categoria">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleInputPassword1">DESCRIPCION</label>
                <textarea class="form-control" type="number" name="descripcion" placeholder="Descripcion"></textarea>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <p>Datos Proveedor</p>
                <hr>
              </div>
              <div class="col-md-6">
                <label for="exampleInputName">Razon Social</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="razonSocial" placeholder="Razon Social" >
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">Email</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="email" placeholder="Email" >
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Imagenes</label>
            <div class="form-row">
                <div class="form-group col-md-offset-3">
                  <input type="file" name="files" multiple="multiple">
                </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <button class="btn btn-lg btn-primary btn-block botonReg" type="submit">Crear Producto</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

{{> footer}}
