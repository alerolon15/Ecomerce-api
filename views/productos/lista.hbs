<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">

{{>header }}
<div class="container" style="margin-top:50px;">
  <h2>Productos</h2>
  <p>Lista de productos en Stock</p>
  {{{error}}}
  <hr>
  <input class="form-control" id="myInput" type="text" placeholder="Filtrar busqueda">
  <table class="table table-striped">
    <thead>
      <tr style="text-align: center;">
        <th>codigo</th>
        <th>titulo</th>
        <th>precio</th>
        <th>categoria</th>
        <th>cantidad</th>
      </tr>
    </thead>
    <tbody id="tablaProductos">
      {{#each productos}}
        <tr>
          <td style="text-align: center;">{{this.codigo}}</td>
          <td style="text-align: center;">{{this.titulo}}</td>
          <td style="text-align: center;">${{this.precio}}</td>
          <td style="text-align: center;">{{this.categoria}}</td>
          <td style="text-align: center;">{{this.cantidad}}</td>
          <td>
            <a href="/listaProducto/editar/{{ this._id }}"><button  class="btn btn-primary" type="submit" data-toggle="tooltip" data-placement="top" title="Editar"><span class="glyphicon glyphicon-pencil"></span></button></a>
            <a href="/listaProducto/borrar/{{ this._id }}" onclick="return confirm('Esta seguro que desea borrar este producto?')"><button class="btn btn-primary" type="submit" data-toggle="tooltip" data-placement="top" title="Borrar"><span class="glyphicon glyphicon-remove"></span></button></a>
          </td>
        </tr>
      {{/each }}
    </tbody>
  </table>
</div>


{{>footer }}
