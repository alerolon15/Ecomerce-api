<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
<style media="screen">
  /* layout.css Style */
  .upload-drop-zone {
  height: 200px;
  border-width: 2px;
  margin-bottom: 20px;
  }

  /* skin.css Style*/
  .upload-drop-zone {
  color: #ccc;
  border-style: dashed;
  border-color: #ccc;
  line-height: 200px;
  text-align: center
  }
  .upload-drop-zone.drop {
  color: #222;
  border-color: #222;
  }
</style>
<div class="container">
    <div class="card card-register mx-auto mt-5">
      <div class="card-header">Crear una Empresa</div>
      <div class="card-body">
        <form action="" enctype="multipart/form-data" autocomplete="off" method="POST">
          {{{error}}}
          {{#if errores}}
            {{#each errores}}
              <div class='alert alert-danger' role='alert'>{{this}}</div>
            {{/each}}
          {{/if}}
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleInputName">Nombre de la compañia</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="nombre_fantasia" placeholder="nombre de la compañia" >
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleInputName">Quienes Somos ?</label>
                <textarea class="form-control" type="text" name="quienes_somos" placeholder="Quienes Somos ?"></textarea>
              </div>
              <div class="col-md-12">
                <label for="exampleInputLastName">Qué hacemos ?</label>
                <textarea class="form-control" type="text" name="que_hacemos" placeholder="Que Hacemos ?"></textarea>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-6">
                <label for="exampleInputName">Direccion</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="direccion" placeholder="Direccion" >
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">Email</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="email" placeholder="Email" >
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <label for="exampleInputPassword1">DESCRIPCION</label>
                <textarea class="form-control" type="text" name="descripcion" placeholder="Descripcion"></textarea>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <p>Telefonos</p>
              </div>
              <div class="col-md-6">
                <label for="exampleInputName">Fijo</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="telefonofijo" placeholder="Fijo" >
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">Movil</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="telefonomovil" placeholder="Movil" >
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <p>Redes Sociales</p>
              </div>
              <div class="col-md-6">
                <label for="exampleInputName">Facebook</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="facebook" placeholder="facebook" >
              </div>
              <div class="col-md-6">
                <label for="exampleInputLastName">Instagram</label>
                <input class="form-control" type="text" aria-describedby="nameHelp" name="instagram" placeholder="instagram" >
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Logo de la empresa</label>
            <div class="form-row">
                <div class="form-group col-md-offset-3">
                  <input type="file" name="files">
                </div>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Imagenes de promociones</label>
            <div class="form-row">
                <div class="form-group col-md-offset-3">
                  <input type="file" name="files" multiple="multiple">
                </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-12">
              <button class="btn btn-lg btn-primary btn-block botonReg" type="submit">Crear Empresa</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

{{> footer}}
