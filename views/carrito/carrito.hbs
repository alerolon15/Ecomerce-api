{{>header }}
<link href="vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

<div class="container" style="margin-top:50px;">
  {{# if products }}
      <div class="row">
          <div class="col-sm-12 col-md-12 ">

            <table class="table table-bordered table-striped">
            		  <thead>
            			  <tr>
              				<th>Imagen</th>
              				<th>Titulo</th>
              				<th>Categoria</th>
                      <th>Stock</th>
              				<th>Cantidad</th>
                      <th>Acciones</th>
              				<th>Precio por unidad</th>
              				<th>Total</th>
            			  </tr>
            			</thead>
            			<tbody>
                    {{# each products }}
            			  <tr>
              				<td class="tdCarrito" style="vertical-align: middle;" class="muted center_text"><a href="/infoProducto/{{this.item._id}}"><img class="img-responsive" style="margin: 0 auto;" width="60px" src="public/images/productos/{{ this.item.imagenes.[0] }}"></a></td>
              				<td class="tdCarrito" style="vertical-align: middle;">{{ this.item.titulo }}</td>
              				<td class="tdCarrito" style="vertical-align: middle;">{{ this.item.categoria }}</td>
                      <td class="tdCarrito" style="vertical-align: middle;">{{ this.item.cantidad }}</td>
              				<td class="tdCarrito" style="vertical-align: middle;"><input type="text" placeholder="{{ this.qty }}" class="input-mini"></td>
                      <td class="tdCarrito" style="vertical-align: middle;">
                        <a class="btn btn-primary btn-block" href="/carrito/reduce/{{this.item._id}}">Remover 1</a></li>
                        <a class="btn btn-primary btn-block" href="/carrito/remove/{{this.item._id}}">Remover todos</a>
                      </td>
              				<td class="tdCarrito" style="vertical-align: middle;">${{ this.item.precio }}</td>
              				<td class="tdCarrito" style="vertical-align: middle;">${{ this.price }}</td>
            			  </tr>
                    {{/each}}
            			  <tr>
            				<td>&nbsp;</td>
            				<td>&nbsp;</td>
            				<td>&nbsp;</td>
            				<td>&nbsp;</td>
            				<td>&nbsp;</td>
            				<td>&nbsp;</td>
                    <td>&nbsp;</td>
            				<td><strong>${{ totalPrice }}.-</strong></td>
            			  </tr>
            			</tbody>
            </table>
            <a href="/crearPedido"><button name="button" class="btn btn-lg btn-danger" name="button">Comprar</button></a> 
  {{ else }}
      <div class="row">
          <div class="col-sm-12 col-md-12">
              <h2>No tiene ningun producto en el Carrito</h2>
          </div>
      </div>
  {{/if}}
    </div>
  </div>
</div>


{{>footer }}
