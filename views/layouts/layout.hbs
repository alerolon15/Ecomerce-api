    <script type="text/javascript">
      function cargarCarrito(id) {
        //console.log(id);
        var direccion = "/agregarCarrito/" + id
        $.ajax(
          {
            url: direccion,
            type: 'GET',
            result: JSON.stringify(id),
            success: function(result){
              if(result) {
                $('#modalito').click();

                document.getElementsByClassName('badge')[0].innerText = result.totalQty;
              };
            }
        });
      };
    </script>
    <script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#tablaProductos tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>
